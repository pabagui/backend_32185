<h2 style="color:orange;">Productos disponibles</h2>

{{#if productosCharged}}
<div class="table-responsive"></div>
    <table class="table table-dark">
        <tr style="color: orange;">
            <th>Producto</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        {{#each productos}}
        <tr>
            <td>
                {{this.title}}
            </td>
            <td>
                {{this.price}}
            </td>
            <td>
                {{this.thumbnail}}
            </td>
        </tr>
        {{/each}}
    </table>
</div>    
{{else}}
<h3 class="alert alert-danger">No hay productos cargados</h3>
{{/if}}