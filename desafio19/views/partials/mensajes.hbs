<h2 style="color:orange;">mensajes</h2>
{{#if hayMensajes}}
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: orange;">
            <th>Fecha</th>
            <th>Email</th>
            <th>Mensaje</th>
        </tr>
        {{#each mensajes}}
        <tr>
            <td>
                {{this.fecha}}
            </td>
            <td>
                {{this.autor}} 
            </td>
            <td>
                <img src={{this.mensaje}}>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<h3 class="alert alert-danger">No hay mensajes</h3>
{{/if}}
